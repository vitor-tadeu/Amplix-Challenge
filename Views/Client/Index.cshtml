@model IEnumerable<Company.Models.Client>

@{
    ViewData["Title"] = "Clientes";
}

<div class="mt-3 ml-3 mr-3">
    <table id="table" class="table table-striped table-hover rounded">
        <thead class="thead-dark">
            <tr>
                <th class="table-dark text-center">Nome Fantasia</th>
                <th class="table-dark text-center">CNPJ</th>
                <th class="table-dark text-center">Responsável</th>
                <th class="table-dark text-center">E-mail</th>
                <th class="table-dark text-center">Telefone</th>
                <th class="table-dark text-center">Cidade</th>
                <th class="table-dark text-center">Estado</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr asp-action="Edit" asp-route-id="@item.id" class="text-center" onclick="window.open('Client/Edit/@item.id', '_blank')">
                    <td>
                        @Html.DisplayFor(modelItem => item.fantasy_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cnpj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.manager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.city)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $("#table").dataTable({
            order: [[0, 'asc'], [6, 'asc'], [5, 'asc']],
            orderClasses: false,
            orderMulti: false,
            pageLength: 100,
            pagingType: "simple_numbers",
            //scrollX: true,
            scrollY: 490,
            language: {
                emptyTable: "Sem dados disponíveis na tabela",
                info: "Mostrando _START_ de _END_ de _TOTAL_ registros",
                infoEmpty: "Sem registros para mostrar",
                infoFiltered: " (filtrado em _MAX_ registros)",
                lengthMenu: 'Mostrando <select>' +
                    '<option value="10">10</option>' +
                    '<option value="25">25</option>' +
                    '<option value="50">50</option>' +
                    '<option value="100">100</option>' +
                    '<option value="-1">All</option>' +
                    '</select> registros',
                loadingRecords: "Por favor aguarde - carregando...",
                processing: "DataTables está ocupado no momento",
                search: "",
                searchPlaceholder: "Pesquisar...",
                zeroRecords: "Não há registros a serem exibidos",
                paginate: {
                    previous: '<',
                    next: '>'
                },
                aria: {
                    paginate: {
                        previous: 'Anterior',
                        next: 'Próximo'
                    }
                }
            }
        });
    });
</script>

<style>
    table, th, td {
        border: 1px solid black;
    }

    td:hover {
        cursor: pointer;
    }
</style>